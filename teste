25. Peça quantas pessoas serão cadastradas. Depois, peça a altura de cada uma e calcule a média das alturas .

let pessoas = Number(prompt("Quantas pessoas serão cadastradas?"));

let soma = 0;
let i;
let altura;

for (i = 1; i <= pessoas; i++) {
    altura = Number(prompt("Digite a altura da pessoa " + i + ":"));
    soma = soma + altura;
}

let media = soma / pessoas;

alert("A média das alturas é: " + media);

